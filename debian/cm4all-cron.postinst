#! /bin/sh -e
# Author: Max Kellermann <mk@cm4all.com>

if [ "$1" = "configure" ]; then
    if ! getent passwd cm4all-cron >/dev/null; then
	adduser --quiet --system --no-create-home \
            --home /var/lib/cm4all/cron \
            --shell /usr/sbin/nologin \
            cm4all-cron
    fi
fi

